---
import { Image } from "astro:assets";
import Logo from "@assets/logo-header.png";
---

<div class="flex justify-center max-w-[1200px] h-16 mx-auto p-2.5 lg:w-full">
  <header class="flex flex-row w-full h-full justify-between items-center">
    <!-- Menú izquierdo -->
    <ul class="text-white space-x-4 font-bold hidden lg:flex">
      <a
        href="/"
        class="relative inline-block hover:after:w-full after:w-0 after:h-[2px] after:bg-white after:absolute after:left-0 after:bottom-0 after:transition-all after:duration-300"
      >
        Productos
      </a>
      <a
        href="/sobre-mi"
        class="relative inline-block hover:after:w-full after:w-0 after:h-[2px] after:bg-white after:absolute after:left-0 after:bottom-0 after:transition-all after:duration-300"
        >Sobre Mi</a
      >
      <a
        href="/contacto"
        class="relative inline-block hover:after:w-full after:w-0 after:h-[2px] after:bg-white after:absolute after:left-0 after:bottom-0 after:transition-all after:duration-300"
      >
        Contacto
      </a>
    </ul>

    <!-- Logo -->
    <Image src={Logo} alt="Logo" width={166} />

    <!-- Menú derecho -->
    <ul class="text-white space-x-4 font-bold hidden lg:flex">
      <a
        href="#"
        class="relative inline-block hover:after:w-full after:w-0 after:h-[2px] after:bg-white after:absolute after:left-0 after:bottom-0 after:transition-all after:duration-300"
      >
        Buscar
      </a>
      <a
        href="#"
        class="relative inline-block hover:after:w-full after:w-0 after:h-[2px] after:bg-white after:absolute after:left-0 after:bottom-0 after:transition-all after:duration-300"
      >
        Iniciar Sesión
      </a>
      <a
        href="#"
        class="relative inline-block hover:after:w-full after:w-0 after:h-[2px] after:bg-white after:absolute after:left-0 after:bottom-0 after:transition-all after:duration-300"
      >
        Carrito
      </a>
    </ul>

    <!-- Icono Hamburguesa en pantallas pequeñas -->
    <div class="lg:hidden flex items-center">
      <button id="hamburger-menu" class="text-white text-2xl"> &#9776; </button>
    </div>
  </header>
</div>

<!-- Menú desplegable en móvil -->
<div
  id="mobile-menu"
  class="lg:hidden fixed inset-0 bg-black bg-opacity-50 z-40 hidden"
>
  <div class="flex justify-end p-4">
    <button id="close-menu" class="text-white text-2xl">×</button>
  </div>
  <ul class="flex flex-col items-center text-white space-y-4 py-10">
    <a
      href="/"
      class="relative inline-block hover:after:w-full after:w-0 after:h-[2px] after:bg-white after:absolute after:left-0 after:bottom-0 after:transition-all after:duration-300"
    >
      Productos
    </a>
    <a
      href="/sobre-mi"
      class="relative inline-block hover:after:w-full after:w-0 after:h-[2px] after:bg-white after:absolute after:left-0 after:bottom-0 after:transition-all after:duration-300"
      >Sobre Mi</a
    >
    <a
      href="/contacto"
      class="relative inline-block hover:after:w-full after:w-0 after:h-[2px] after:bg-white after:absolute after:left-0 after:bottom-0 after:transition-all after:duration-300"
    >
      Contacto
    </a>
    <a
      href="#"
      class="relative inline-block hover:after:w-full after:w-0 after:h-[2px] after:bg-white after:absolute after:left-0 after:bottom-0 after:transition-all after:duration-300"
    >
      Buscar
    </a>
    <a
      href="#"
      class="relative inline-block hover:after:w-full after:w-0 after:h-[2px] after:bg-white after:absolute after:left-0 after:bottom-0 after:transition-all after:duration-300"
    >
      Iniciar Sesión
    </a>
    <a
      href="#"
      class="relative inline-block hover:after:w-full after:w-0 after:h-[2px] after:bg-white after:absolute after:left-0 after:bottom-0 after:transition-all after:duration-300"
    >
      Carrito
    </a>
  </ul>
</div>

<script src="../scripts/index.ts"></script>
