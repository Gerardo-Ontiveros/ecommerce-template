---
const { name, description, price, image, linkPago } = Astro.props;
---

<div>
  <div class="flex flex-col items-center">
    <div class="flex flex-col items-center">
      <div
        class="relative w-[150px] h-[150px] flex items-center justify-center"
      >
        <img src={image} alt={name} class="object-center w-[150px] h-auto" />
      </div>
      <h3 class="text-lg text-white font-bold mt-4">{name}</h3>
      <p class="text-sm text-blue-300">{description}</p>
      <p class="text-lg text-blue-400 font-bold mt-2">${price}</p>
    </div>
    <a
      href=`${linkPago}`
      class="bg-blue-400 rounded-2xl text-white px-4 py-2 mt-4 hover:bg-blue-500 active:bg-blue-600"
    >
      Comprar
    </a>
  </div>
</div>
